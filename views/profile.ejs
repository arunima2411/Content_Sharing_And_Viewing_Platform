<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form action="/fileupload" hidden id="uploadform" method="post" enctype="multipart/form-data">
        <input type="file" name="image" id="">
    </form>
<div class="profile-dets flex flex-col items-center mt-20">
    <div class="relative">
        <span id="uploadicon" class="text-zinc-800 w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200"><i class="ri-pencil-fill"></i></span>
        <div class="h-32 w-32 bg-zinc-200 rounded-full overflow-hidden">
        <img src="/images/uploads/<%=user.profileImage%>" alt="" class="w-full h-full object-cover">
    </div></div>
    
    <h1 class="text-3xl font-semibold mt-5"><%=user.username%></h1>
    <h1 class="text-md"><%=user.email%></h1>
    <a href="/edit"  class=" mt-5 px-7 py-2 bg-zinc-600 rounded-full text-xs font-semibold">Edit</a>
    <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-7">Add New Post</a>
</div>
<div class="cards flex flex-wrap gap-10 px-7 mt-10">
    <div>
        <div class="w-52 h-40 rounded-lg bg-zinc-200 overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image%>" alt=""></div>
        <a href="/showposts" class="text-xl font-semibold mt-3">Your Uploaded Pins</a>
        <h5 class="text-sm font-regular"><%=user.posts.length%> Pins</h5>
    </div>
    
</div>
</div>

<script>
    document.querySelector('#uploadicon').addEventListener('click',function(){
        document.querySelector('#uploadform input').click();
    })

    document.querySelector('#uploadform input').addEventListener('change',function(){
        document.querySelector('#uploadform').submit();
    })
</script>




<% include ./partials/footer.ejs %>